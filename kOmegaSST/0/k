FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 20;

boundaryField
{
    inlet
    {
        type            kqRWallFunction;
        value           uniform 20;
    }
    outlet
    {
        type            zeroGradient;
    }
    top
    {
        type            slip;
    }
    bottom
    {
        type            slip;
    }
    cylinder
    {
        type            kqRWallFunction;
        value           uniform 0;     
    }
    sides
    {
        type            empty;
    }
}


